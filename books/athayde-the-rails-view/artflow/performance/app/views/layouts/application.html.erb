<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Artflow</title>
  <%= stylesheet_link_tag    "application" %>
  <%# START:js %>
  <%= javascript_include_tag "application" %>
  <%# END:js %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header id="page_header" role="banner">
      <nav id="utility">
        <p>
          Welcome, <%= current_user.name %>
          <%= link_to "[Your Account]", "current_user_path" %> |
          <%= link_to "[Logout]", "logout_path" %>
        </p>
      </nav>
    <%= link_to(
          image_tag("logo.png",
                    alt: "Artflow",
                    id: "logo"),
          root_url,
          title: "Dashboard") %>
   <%= yield :main_navigation %>
  </header>
  <%= image_tag("tagline.png",
                alt: "Creative File Management Made Easy",
                id: "tagline") %>
  <div class="container">
    <section id="content">
      <% if notice %>
        <p class="notification notice">
          <%= notice %>
        </p>
      <% end %>

      <% if alert %>
        <p class="notification alert">
          <%= alert %>
        </p>
      <% end %>

      <%= yield %>
    </section>
    <%# START:ipadsidebar %>
    <% if content_for?(:ipad_sidebar) %>
      <div id="ipad_sidebar">
        <%= yield :ipad_sidebar %>
      </div>
    <% end %>
    <%# END:ipadsidebar %>
    <section id="sidebar">
      <%# START_HIGHLIGHT %>
      <nav id="functional_nav">
        <ul>
          <% #if current_user.designer? %>
            <li><%= link_to 'Add Creation', new_creation_path %></li>
          <% #end %>
          <%= yield :functional_nav %>
        </ul>
      </nav>
      <%# END_HIGHLIGHT %>
      <%= yield :sidebar %>
    </section>
  </div>
  <footer id="page_footer">
    <ul>
      <li><%= link_to "Contact", "" %></li>
      <li><%= link_to "Help", "" %></li>
      <li><%= link_to "File a Bug", "" %></li>
    </ul>
    <p>&copy; 2012 AwesomeCo. All Rights Reserved. All Wrongs Reversed.</p>
  </footer>
</body>
</html>
